doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title WebCamByZip
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Web Cam by ZipCode
    .row
      .small-3.columns
        input#inputZip(type='text', autofocus, placeholder='ZipCode')
      .small-3.columns
        button#addZip.radius.tiny Add To List
      .small-2.columns
        select#selector
      .small-2.columns
        button#getCam Get Camera
      .small-2.columns
        button#clear.alert Clear
    .row
      .small-12-columns
        #container
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/source/main.js')
    script $(document).foundation();


